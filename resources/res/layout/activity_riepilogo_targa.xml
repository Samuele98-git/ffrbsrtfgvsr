<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sfon2"
    style="@style/root_layout">
    <include layout="@layout/banner"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_above="@+id/buttonPanel"
        android:layout_below="@+id/navigationBanner"
        style="@style/body">
        <android.support.v4.app.FragmentTabHost
            android:id="@+id/riepilogo_targa_tab_host"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TabWidget
                    android:orientation="horizontal"
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0"/>
                <FrameLayout
                    android:id="@+id/realtabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </android.support.v4.app.FragmentTabHost>
    </LinearLayout>
    <LinearLayout
        android:gravity="left"
        android:orientation="horizontal"
        android:id="@+id/buttonPanel"
        android:background="@color/grigioChiaro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/titoloValidoContainer"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:enabled="false"
                android:id="@+id/registraAbbValido"
                android:background="@android:color/transparent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/abbonamenti_ok"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Titolo valido"
                style="@style/text.icon"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/emissionePreavviso"
                android:background="@android:color/transparent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/verbale_compilazione"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Accertamento"
                style="@style/text.icon"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/stampaDiCortesiaContainer"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:enabled="false"
                android:id="@+id/stampaDiCortesia"
                android:background="@android:color/transparent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/stampa"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="match_parent"
                android:text="St. di cortesia"
                style="@style/text.icon"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/checkAbbsFromServer"
                android:background="@android:color/transparent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/server_abbonamenti"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Aggiorna"
                style="@style/text.icon"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
