<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/item_margin_s"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/txtDatiMancanti"
        android:background="@color/rosso"
        android:padding="@dimen/item_margin_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dati mancanti"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iconTipoFigura"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/account"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iconTipoFigura">
            <TextView
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/txtTipologiaFigura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trasgressore"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/txtNomeRagSoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/txtIndirizzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnRemoveFigura"
            android:background="@android:color/transparent"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/item_margin"
            android:src="@drawable/delete"
            android:scaleType="centerInside"/>
        <ImageButton
            android:id="@+id/btnEditFigura"
            android:background="@android:color/transparent"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/edit"
            android:scaleType="centerInside"/>
    </LinearLayout>
</LinearLayout>
