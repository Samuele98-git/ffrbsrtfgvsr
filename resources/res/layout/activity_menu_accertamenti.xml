<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sfon2"
    style="@style/root_layout">
    <include layout="@layout/banner"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            style="@style/body">
            <TextView
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verbalizzazione"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/btnCompilaVerbale"
                        android:background="@drawable/verbale_compilazione"
                        style="@style/icon"/>
                    <TextView
                        android:id="@+id/TextView03"
                        android:text="Accertamenti"
                        style="@style/text.icon"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sosta"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="5">
                <LinearLayout
                    android:gravity="bottom|right"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <RelativeLayout
                        android:id="@+id/abbo"
                        android:background="@drawable/targa"
                        style="@style/icon"/>
                    <TextView
                        android:id="@+id/TextView03"
                        android:text="Verifica Targa"
                        style="@style/text.icon"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/titparco"
                        android:background="@drawable/parcometro"
                        style="@style/icon"/>
                    <TextView
                        android:id="@+id/textView1"
                        android:text="Verifica titoli\10parcometri"
                        style="@style/text.icon"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/titprep"
                        android:background="@drawable/titolo2"
                        style="@style/icon"/>
                    <TextView
                        android:id="@+id/TextView02"
                        android:text="Verifica titoli\10prepagati"
                        style="@style/text.icon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/lblNumPreavvisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero preavvisi disponibili"
                    style="@style/text"/>
                <TextView
                    android:textColor="@color/verdeAcido"
                    android:id="@+id/txtNumPreavvisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_alignBaseline="@+id/lblNumPreavvisi"
                    android:layout_alignBottom="@+id/lblNumPreavvisi"
                    android:layout_centerHorizontal="true"
                    style="@style/text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/lblNumVerbali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero verbali disponibili"
                    style="@style/text"/>
                <TextView
                    android:textColor="@color/verdeAcido"
                    android:id="@+id/txtNumVerbali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_alignBaseline="@+id/lblNumVerbali"
                    android:layout_alignBottom="@+id/lblNumVerbali"
                    android:layout_centerHorizontal="true"
                    style="@style/text"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/backgroundscuro"
                android:id="@+id/textView4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versione software : 2.9n"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
