<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <Button
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/btnAcquisisciGPS"
            android:background="@color/verdeAcido"
            android:padding="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Acquisisci da GPS"
            android:drawableRight="@drawable/ic_satellite_variant_white_24dp"
            android:layout_weight="0.9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <AutoCompleteTextView
            android:id="@+id/toll_via"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Via"
            android:layout_weight="0.9"
            android:layout_below="@+id/btnAcquisisciGPS"/>
        <TextView
            android:textColor="@color/rosso"
            android:id="@+id/toll_via_asterisco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_weight="0.1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/toll_presso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Presso"
            android:layout_weight="0.9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
    </LinearLayout>
</LinearLayout>
