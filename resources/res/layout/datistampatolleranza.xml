<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/toll_via_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Via"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/toll_via"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"/>
        <TextView
            android:textColor="@color/rosso"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/toll_via_lab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/toll_presso_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presso"
        android:layout_below="@+id/toll_via"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/toll_presso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/toll_estensione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tolleranza estensione"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
