<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/bianco"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/thumbnail"
        android:background="@color/bianco"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/abbonamento_image"
            android:layout_width="@dimen/abb_image_size"
            android:layout_height="@dimen/abb_image_size"
            android:src="@drawable/background_abbonamento"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/textSize_abb"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:id="@+id/targa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/textSize_abb"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:id="@+id/datainiziofine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/targa"/>
    <LinearLayout
        android:id="@+id/tipoabbonamento"
        android:background="@color/bianco"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="@dimen/textSize_abb"
            android:textColor="#000000"
            android:gravity="right"
            android:id="@+id/numeroabb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/textSize_abb"
        android:textColor="#ff0000"
        android:layout_gravity="left"
        android:id="@+id/tipologia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipoabbonamento"/>
    <TextView
        android:textSize="@dimen/textSize_abb"
        android:textColor="#ff8000"
        android:layout_gravity="left"
        android:id="@+id/zona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipologia"/>
</RelativeLayout>
