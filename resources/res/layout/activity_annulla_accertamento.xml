<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sfon2"
    style="@style/root_layout">
    <include layout="@layout/banner"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/body">
            <Button
                android:textSize="@dimen/textSize_l"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnModificaDati"
                android:background="@color/verdeAcido"
                android:padding="@dimen/bigButtonPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Torna all&apos;inizio della procedura per modificare i dati"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="top"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/motivoabbandono"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="40dp"
                    android:hint="motivo per cui si abbandona l&apos;accertamento"
                    android:lines="10"
                    android:layout_weight="4"
                    android:inputType="textMultiLine"
                    style="@style/text.label"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/foto"
                    android:background="@drawable/camera"
                    android:layout_marginTop="20dp"
                    style="@style/icon"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
